.container
  %h1.page-header Pledged to #{@project.name}

  .row
    %b.col-md-4 User:
    .col-md-4= display_user(@pledge.user)
  .row
    %b.col-md-4 Hours:
    .col-md-4= @pledge.hours
  .row
    %b.col-md-4 Notes:
    .col-md-4= @pledge.notes
  
  .col-md-4.col-md-offset-8= link_to 'Edit', edit_community_project_pledge_path(@community, @project, @pledge)
