.container
  .row
    %b.col-md-4 Name:
    .col-md-4= display_user(@membership.user)
  
  .row
    %b.col-md-4 Role:
    .col-md-4= @membership.role_id
  
  .row
    %b.col-md-4 Application info:
    .col-md-4= @membership.application_info
  
  .row
    %b.col-md-4 Notes:
    .col-md-4= @membership.notes
  
  .col-md-4.col-md-offset-8= link_to 'Edit', edit_community_membership_path(@community, @membership)
